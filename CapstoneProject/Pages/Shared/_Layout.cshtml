@inject CapstoneProject.Models.UserAccessLayer UserDAL
@inject CapstoneProject.Models.CommunityDataAccessLayer CommunityDAL
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CapstoneProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CapstoneProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Guild Quest </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/CharacterInput">Character</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Announcements">Announcements</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Community">Community</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Quest">Quests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Friends">Friends</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/login">Log In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - CapstoneProject - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- The Chat Starts Here -->
    <div id="chat-widget" class="chat-closed">

        <div id="chat-header" onclick="toggleChat()">
            💬 Chat
        </div>

        <div id="chat-body">

            <div id="chatHome">
                <button onclick="showView('communityDM')">Community</button>
                <button onclick="showView('friendsDM')">Friends</button>
            </div>

            <div id="communityDM" style="display:none;">
                <button onclick="goHome()">Back</button>
                <div id="communityContainer"></div>
            </div>

            <div id="friendsDM" style="display:none;">
                <button onclick="goHome()">Back</button>
                <div id="friendsContainer"></div>
            </div>

            <div id="conversationView" style="display:none;">
                <button onclick="closeConversation()">Back</button>
                <div id="chat-messages"></div>
                <div id="inputBox">
                    <input type="text"
                           id="chat-input"
                           placeholder="Type a message..." />
                    <button onclick="sendMessage()">Send</button>
                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    @{
        var username = Context.Session.GetString("Username");
        var userIdFromSession = Context.Session.GetInt32("UserID");
        var friendsList = new List<object>();
        var communitiesList = new List<object>();

        if (userIdFromSession.HasValue)
        {
            try
            {
                friendsList = UserDAL.GetFriends(userIdFromSession.Value)
                .Select(f => (object)new { id = ((CapstoneProject.Models.UserModel)f).User_ID, name = ((CapstoneProject.Models.UserModel)f).Username })
                .ToList();

                communitiesList = CommunityDAL.GetUserCommunities(userIdFromSession.Value)
                .Select(c => (object)new { id = ((CapstoneProject.Models.CommunityModel)c).CommunityID, name = ((CapstoneProject.Models.CommunityModel)c).Name })
                .ToList();
            }
            catch (Exception ex)
            {
                Console.WriteLine("Layout data error: " + ex.Message);
            }
        }
    }

    <script>
        const currentUser = "@username";
        const friends = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(friendsList));
        const communities = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(communitiesList));
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
