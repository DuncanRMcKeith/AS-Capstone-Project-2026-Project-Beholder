<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CapstoneProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CapstoneProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Guild Quest </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/CharacterInput">Character</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Announcements">Announcements</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Community">Community</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Quest">Quests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Friends">Friends</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/login">Log In</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - CapstoneProject - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- The Chat Starts Here -->
    <div id="chat-widget" class="chat-closed">

        <div id="chat-header" onclick="toggleChat()">
            💬 Chat
        </div>

        <div id="chat-body">

            <!-- Buttons  -->
            <div id="chatHome">
                <button id="communityTabBtn" onclick="showView('communityDM')">Community</button>
                <button id="friendsTabBtn" onclick="showView('friendsDM')">Friends</button>
            </div>

            <div id="communityDM" style="display:none;">
                <button onclick="goHome()">Back</button>
                <div id="communityContainer"></div>
            </div>

            <div id="friendsDM" style="display:none;">
                <button onclick="goHome()">Back</button>
                <div id="friendsContainer"></div>
            </div>

            <!--<div class="chat-messages" id="chat-messages">
                <p><strong>Bot:</strong> Hey! How can I help?</p>
            </div>-->

            <div id="conversationView" style="display:none;">

                <button onclick="closeConversation()">Back</button>

                <div id="chat-messages"></div>

                <div id="inputBox">
                    <input type="text"
                           id="chat-input"
                           placeholder="Type a message..."
                           onkeydown="handleKeyPress(event)" />
                    <button onclick="sendMessage()">Send</button>
                </div>

            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        const currentUser = "@Context.Session.GetString("Username")";
        const currentUserId = @Context.Session.GetInt32("UserID");
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>