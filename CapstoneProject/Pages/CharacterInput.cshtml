@page
@model CapstoneProject.Pages.CharacterInput
@{
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    body {
        padding: 18px;
        box-sizing: border-box;
        font-family: Arial, Helvetica, sans-serif;
    }

    .page {
        min-height: 100vh;
        border: 2px solid;
        padding: 18px;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
    }

    .header {
        border: 1px solid;
        text-align: center;
        padding: 10px 0;
        font-size: 20px;
        margin-bottom: 18px;
    }

    .main {
        flex: 1;
        border: 1px solid;
        padding: 26px;
        box-sizing: border-box;
    }

    .grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 26px;
    }

    .left {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .box {
        border: 1px solid;
        padding: 12px;
        text-align: center;
        box-sizing: border-box;
    }

    .notes {
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .right {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        gap: 16px;
    }

    .image {
        width: 100%;
        aspect-ratio: 1 / 1;
        border: 1px solid;
        box-sizing: border-box;
        overflow: hidden;
        text-align: center;
    }

    .image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .box.image-upload {
        width: 100%;
    }

    #diceContainer {
        margin-top: 20px;
    }

    #dice {
        width: 120px;
        height: 120px;
        border: 3px solid black;
        font-size: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
    }

    .box.notes {
        min-height: 0;
        min-height: 0;
        overflow: hidden;
    }

    .box.notes textarea {
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
        display: block;
    }

    .footer {
        margin-top: auto;
        border: 1px solid;
        text-align: center;
        padding: 10px 0;
        box-sizing: border-box;
    }
</style>

<div class="header">Character</div>

<!-- Left Side of Screen -->
<form id="CharacterForm" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="main">
        <div class="grid">
            <div class="left">

                <div class="box">
                    Character First Name
                    <input asp-for="Character.FName"
                           placeholder="Enter your character's first name"
                           class="form-control" />
                </div>

                <div class="box">
                    Character Last Name
                    <input asp-for="Character.LName"
                           placeholder="Enter your character's last name"
                           class="form-control" />
                </div>

                <div class="box">
                    Title
                    <input asp-for="Character.Title"
                           placeholder="Enter your character's title"
                           class="form-control" />
                </div>

                <div class="box">
                    Level
                    <input asp-for="Character.Level" type="number" class="form-control" />
                </div>

                <div class="box">
                    Character Class
                    <input asp-for="Character.CharacterClass"
                           placeholder="Enter your character's class"
                           class="form-control" />
                </div>

                <div class="box">
                    Strength
                    <input asp-for="Character.Strength" type="number" class="form-control" />
                </div>

                <div class="box">
                    Dexterity
                    <input asp-for="Character.Dexterity" type="number" class="form-control" />
                </div>

                <div class="box">
                    Constitution
                    <input asp-for="Character.Constitution" type="number" class="form-control" />
                </div>

                <div class="box">
                    Intelligence
                    <input asp-for="Character.Intelligence" type="number" class="form-control" />
                </div>

                <div class="box">
                    Wisdom
                    <input asp-for="Character.Wisdom" type="number" class="form-control" />
                </div>

                <div class="box">
                    Charisma
                    <input asp-for="Character.Charisma" type="number" class="form-control" />
                </div>

                <div class="box notes">
                    <textarea asp-for="Character.Notes"
                              placeholder="Notes..."
                              class="form-control"
                              rows="5"></textarea>
                </div>

            </div>
            <!-- Right Side of Screen -->
            <div class="right">

                <!-- Image upload -->
                <div class="box image-upload">
                    <div class="image">
                        <img id="CharacterPreview" alt="Character" />
                    </div>

                    <input id="CharacterImage" name="CharacterImage" type="file" accept="image/*">
                </div>
                
                <script>
                    document.getElementById('CharacterImage').addEventListener('change', function () {
                      const file = this.files && this.files[0];
                      if (!file) return;

                      const img = document.getElementById('CharacterPreview');
                      img.src = URL.createObjectURL(file);
                      img.style.display = 'block';
                      this.style.display = 'none';
                    });
                </script>

                <link rel="stylesheet" href="~/css/DiceRoll.css" asp-append-version="true" />
                <!-- Dice Roll -->
                <div id="diceRow">
                    <div class="die"></div>
                    <div class="die"></div>
                    <div class="die"></div>
                    <div class="die"></div>
                </div>

                <div id="resultBox">Total:</div>

                <button id="rollBtn" type="button">Roll Dice</button>

                <script src="~/js/DiceRoll.js" asp-append-version="true"></script>
            </div>
        </div>
    </div>
    <!-- Form Buttons -->
    <div class="footer">
        <button type="button" onclick="history.back()">Cancel</button>
        <button type="submit">Upload</button>
    </div>

</form>