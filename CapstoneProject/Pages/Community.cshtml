@page
@model CapstoneProject.Pages.CommunityModel
@{
    ViewData["Title"] = "Communities";
}

<style>
    .card-banner {
        width: 100%;
        height: 160px;
        object-fit: cover;
    }

    .card-banner-placeholder {
        width: 100%;
        height: 160px;
        background-color: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #adb5bd;
        font-size: 2rem;
    }

    .community-card {
        height: 100%;
    }
</style>

<h1 class="mb-4">Communities</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

    @if (Model.Communities != null && Model.Communities.Any())
    {
        @foreach (var community in Model.Communities)
        {
            <div class="col">
                <div class="card community-card">

                    @if (!string.IsNullOrEmpty(community.ImageURL))
                    {
                        <img class="card-banner" src="@community.ImageURL" alt="@community.Name" />
                    }
                    else
                    {
                        <div class="card-banner-placeholder">⚔</div>
                    }

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@community.Name</h5>
                            @if (!string.IsNullOrEmpty(community.CampaignVersion))
                            {
                                <span class="badge bg-secondary ms-2">@community.CampaignVersion</span>
                            }
                        </div>

                        <p class="card-text text-muted">@community.Description</p>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center flex-wrap gap-2">
                        <div>
                            @if (!string.IsNullOrEmpty(community.Badges))
                            {
                                @foreach (var badge in community.Badges.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <span class="badge bg-primary me-1">@badge.Trim()</span>
                                }
                            }
                            <small class="text-muted d-block mt-1">@community.MemberCount members</small>
                        </div>
                        <a class="btn btn-sm btn-outline-primary">Join</a>
                    </div>

                </div>
            </div>
        }
    }
    else
    {
        <div class="col">
            <p class="text-muted fst-italic">No communities found.</p>
        </div>
    }

</div>
