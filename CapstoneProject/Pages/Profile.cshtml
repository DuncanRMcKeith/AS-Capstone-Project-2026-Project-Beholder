@page
@model CapstoneProject.Pages.Index1Model
@{
	ViewData["Title"] = "Profile";
}
<head>
	<link href="./css/profile.css" rel="stylesheet" />
	<script src="https://kit.fontawesome.com/9a2eb0f57a.js" crossorigin="anonymous"></script>

</head>

<div class="container">


<div class="profile-top">
	<img class="profile-pic" src="https://placehold.co/150x150" alt="Profile picture"/>

	<div class="profile-text">
			<h1 class="text-center">@Model.CurrentUser.Username</h1>

			<p class="text-center" id="User-Description">
				@Model.CurrentUser.User_Description
			</p>

	</div>
</div>
	<br />
	<button class="edit-profile">Edit Profile <i class="fa-solid fa-wrench"></i></button>


<div class="profile-characters">
	<h2 class="text-center">Characters</h2>
	<nav class="border-bottom box-shadow mb-3">
		<ul>
			<li class="nav-item">
				<a class="nav-link" asp-area="" asp-page="#">1</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" asp-area="" asp-page="#">2</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" asp-area="" asp-page="#">3</a>
			</li>
			<li class="nav-item active">
				<a class="nav-link" asp-area="" asp-page="#">4</a>
			</li>
		</ul>
	</nav>

	<div class="character-display">
		<div class="character-text">
			<h2>JOHN DND</h2>
			<p>level 5 barbarian</p>
			<p>Additional notes go here</p>
			<button class="edit-profile">Edit Character</button>
		</div>

		<div class="char-image">
			<img src="https://placehold.co/250x250" />
		</div>

		<ul>
			<li>STR: 5</li>
			<li>DEX: 5</li>
			<li>CON: 5</li>
			<li>INT: 5</li>
			<li>WIS: 5</li>
			<li>CHA: 5</li>
		</ul>
	</div>



</div>

<div class="comms-badges">
	<div class="comms text-center">
		<p>Active Communities</p>
	</div>

	<div class="badges text-center">
		<p>Badges</p>
	</div>

	</div>
</div>